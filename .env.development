# ============================================
# 开发环境配置 (.env.development)
# ============================================
#
# 此文件专用于开发环境，提供适合开发调试的配置
# 加载优先级：.env.local > .env.development > .env.production > .env

# 核心配置 - 开发环境
MONOLITH_MODE=development
MONOLITH_LOG_LEVEL=debug
# NO_COLOR=  # 开发环境保持彩色输出

# 翻译配置 - 开发环境优化
MONOLITH_TRANSLATION_ENABLED=true
MONOLITH_TRANSLATION_TARGET_LANG=zh
MONOLITH_TRANSLATION_SOURCE_LANG=auto
MONOLITH_TRANSLATION_API_URL=https://deepl3.fileaiwork.online/dptrans?token=ej0ab47388ed86e843de9f499e52e6e664ae1m491cad7bf1.bIrYaAAAAAA=.b9c326068ac3c37ff36b8fea77867db51ddf235150945d7ad43472d68581e6c4pd14&newllm=1

# 开发环境使用较低的API限制，便于调试
MONOLITH_TRANSLATION_MAX_REQUESTS_PER_SECOND=2.0
MONOLITH_TRANSLATION_MAX_CONCURRENT_REQUESTS=3
MONOLITH_TRANSLATION_BATCH_SIZE=5000
MONOLITH_TRANSLATION_BATCH_TIMEOUT=60

# 缓存配置 - 开发环境使用较小缓存
MONOLITH_CACHE_ENABLED=true
MONOLITH_CACHE_LOCAL_SIZE=500
MONOLITH_CACHE_TTL=1800  # 30分钟，便于测试缓存过期
MONOLITH_CACHE_WARMUP_ENABLED=false

# Web服务器 - 开发环境
MONOLITH_WEB_BIND_ADDRESS=127.0.0.1
MONOLITH_WEB_PORT=7080  # 使用8080避免与其他服务冲突
MONOLITH_WEB_STATIC_DIR=static

# MongoDB - 开发环境使用本地实例
MONGODB_URL=mongodb://admin:your_password@mongodb.mongodb-html-storage.orb.local:27017
MONGODB_DATABASE=monolith_dev
MONGODB_COLLECTION=html_cache_dev

# 性能配置 - 开发环境资源限制
MONOLITH_WORKER_THREADS=2
MONOLITH_MAX_MEMORY_MB=256
MONOLITH_PARALLEL_ENABLED=true

# 安全配置 - 开发环境不需要认证
# MONOLITH_API_KEY=  # 开发环境不设置API密钥
MONOLITH_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
