# Monolith Production Environment Configuration
# Copy this file to .env.prod and modify as needed

# Application Configuration
RUST_LOG=warn
BIND_ADDR=0.0.0.0
PORT=7080

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# Translation Service Configuration
DEEPLX_API_URL=https://api.deeplx.org/translate
TRANSLATION_TIMEOUT=60

# Web Server Configuration
STATIC_DIR=static
TEMPLATE_DIR=templates

# Security Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here-change-this
CORS_ORIGIN=https://your-domain.com

# Cache Configuration
CACHE_TTL=0  # Permanent cache for production
CACHE_PREFIX=monolith:prod:translation:

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json

# Performance Configuration
MAX_CONNECTIONS=1000
WORKER_THREADS=8

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d